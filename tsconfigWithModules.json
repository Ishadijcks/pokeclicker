{
  "compilerOptions": {
    "lib": ["dom", "es2019"],
    "skipLibCheck": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "moduleResolution": "node"
  },
  "compileOnSave": false,
  "include": ["src/modules/**/*"],
  "exclude": [
    "node",
    "build",
    "src/libs",
    "src/specs",
    "src/scripts",
    "other"
  ]
}
